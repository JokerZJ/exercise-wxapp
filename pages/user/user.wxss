/* user.wxss */
.user-info {
  height: 450rpx;
  color: #fff;
  position: relative;
}
.user-info .user-info-bg {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: -1;
  opacity: 0.3;
}
.userIm{
  width: 60%;
  height:390rpx;
  margin: 30rpx 20%;
  display: flex;
  flex-direction: column;
  text-align: center;
}
.userIm .Pic{
  width:100%;
  height:250rpx;
  flex-grow: 1;
}
.userIm .Pic image{
  width:128px;
  height:128px;
  border-radius: 50%;
}
.UserName{
  color: black;
  font-size: 33rpx;
  flex-grow: 1;
}
.userTag{
  color:#999;
  font-size: 25rpx;
  flex-grow: 1;
}
.user-con{
  width: 100%;
  height: auto;
    background: white;
  margin-top: 30rpx;
}
.menuList{
  width: 90%;
  margin:0 5%;
   height:150rpx; 
  text-align: center;
  font-size: 35rpx;
  padding: 50rpx 10rpx;

  border-bottom: 1px solid #ccc;

}

.menuList .li_img{
    width: 64rpx;
    height:64rpx;
    float: left;
    margin-right: 20rpx;
    vertical-align: middle;
}
.li_name{
  float: left;
}
.li_in{
   float: right;
}
.li_in image{
  width: 20rpx;
  height:30rpx;
}
.btn{
  position: relative;
  width: 90%;
  height:80rpx;
  line-height: 80rpx;

  margin: 100rpx 5%;
  text-align: center;
  color: white;
  background: #3984C6;
}